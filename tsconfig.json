{
    "compileOnSave": true,
    "compilerOptions": {
        "jsx": "react",
        "target": "ES6",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "declaration": true,
        "declarationMap": true,
        "composite": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "rootDir": "src",
        "outDir": "dist",
        "allowJs": true
    },
    "include": ["src"],
    "exclude": ["**/tests/**/*", "**/dist/**/*"]
}
